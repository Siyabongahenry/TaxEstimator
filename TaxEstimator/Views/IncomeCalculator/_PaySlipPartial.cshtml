@model TaxEstimator.Models.PaySlip

<div class="" id="income-slip" style="font-size:11px">
    <div class="d-inline-block bg-white p-2" style="width:400px;border:2px solid #f3f3f3">
        <h6 class="text-white p-2 m-2" style="background-color:silver;">For Employee (R)</h6>
        <div class="text-end p-2">
            <span class="text-end fw-bold d-inline-block" style="width:100px">
                @Html.DisplayNameFor(item =>Model.Date)
            </span>
            <span id="TaxDate" class="d-inline-block text-start" style="width:100px">
                @Html.DisplayFor(item =>Model.Date)
            </span>
        </div>
        <div class="text-start p-2 fw-bold text-dark">
            Names:&nbsp;
            @Html.DisplayFor(item =>Model.Income.Employee.FirstName)
            &nbsp;
            @Html.DisplayFor(item =>Model.Income.Employee.LastName)
        </div>
        
        <div class="p-2 text-start w-50 float-end">
            <span class="fw-bold">
                @Html.DisplayNameFor(item=>Model.Rebate)
            </span>
            <span id="TaxRebate" style="background-color:#f3f3f3;padding:2px;color:green;">
                @Html.DisplayFor(item=>Model.Rebate)
            </span>
        </div>
        <div class="w-100 p-2 text-start w-50">
            <span class="fw-bold">
                @Html.DisplayNameFor(item=>Model.Income.GrossIncome)
            </span>
            <span id="Income" style="background-color:#f3f3f3;padding:2px;">
                @Html.DisplayFor(item=>Model.Income.GrossIncome)
            </span>
        </div>
        
        <table class="table text-start">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <span>
                            @Html.DisplayNameFor(item=>Model.Income.IncomeAmount)
                        </span>
                    </td>
                    <td style="border-bottom:2px solid green;">
                        <span id="AnnualIncome">
                            @Html.DisplayFor(item =>Model.Income.IncomeAmount)
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span>
                            @Html.DisplayNameFor(item=>Model.PAYE)
                        </span>
                    </td>
                    <td class="text-danger text-start">
                        -<span id="MonthlyPAYE">
                            @Html.DisplayFor(item=>Model.PAYE)
                        </span>
                    </td>
                </tr>
                @foreach(Contribution contribution in Model.Income.Contributions)
                {
                    if (!contribution.IsDeductable || contribution.Amount == 0)
                    {
                        continue;
                    }
                    <tr>
                        <td>
                            <span>
                                @Html.DisplayFor(item=> contribution.Name)
                            </span>
                        </td>
                        <td class="text-danger">
                            -<span id="UIF">
                                @Html.DisplayFor(item=>contribution.Amount)
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="bg-light fw-bold" style="border:2px solid black">
                    <td>
                        <span>
                            @Html.DisplayNameFor(item=>Model.TakeHome)
                        </span>
                    </td>
                    <td class="text-success">
                        <b id="TakeHomeIncome">
                            @Html.DisplayFor(item=>Model.TakeHome)
                        </b>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
