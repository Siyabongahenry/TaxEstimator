@model TaxEstimator.Areas.Admin.ViewModels.TaxThresholdViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="shadow bg-light">
    <h1 class="display-6 p-2 bg-white text-center">Add/Edit Threshold</h1>
    <div class="p-2 overflow-auto">
        <a class="text-primary text-decoration-none float-start" asp-action="Index">Go Back</a>
        <a class="btn btn-success float-end" asp-action="ExtractFromSARS">Auto Fill With SARS Data</a>
    </div>
    <form asp-action="Create" method="post">
        <table class="table">
            <thead class="bg-theme">
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.Threshold.Year)</th>
                    <th>@Html.DisplayNameFor(m=>m.Threshold.LowAge)</th>
                    <th>@Html.DisplayNameFor(m=>m.Threshold.MidAge)</th>
                    <th>@Html.DisplayNameFor(m=>m.Threshold.OldAge)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @Html.EditorFor(m=>m.ThresholdList)

                <tr>
                    <td>
                        <input asp-for="@Model.Threshold.Year" class="form-control" value="0" />
                        <span asp-validation-for="@Model.Threshold.Year" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Threshold.LowAge" class="form-control" value="0" />
                        <span asp-validation-for="@Model.Threshold.LowAge" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Threshold.MidAge" class="form-control" value="0" />
                        <span asp-validation-for="@Model.Threshold.MidAge" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Threshold.OldAge" class="form-control" value="0" />
                        <span asp-validation-for="@Model.Threshold.OldAge" class="text-danger"></span>
                    </td>
                    <td>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Apply Changes</button>
        </div>
    </form>
</div>



